@{
    ViewBag.Title = "Home Page";
}

@model Milenium.Models.UserData


@using (Html.BeginForm("SubmitUserData", "Home", FormMethod.Post))
{
    @Html.ValidationSummary()
    @Html.LabelFor(x => x.Nickname)
    @Html.TextBoxFor(x => x.Nickname, new { placeholder = "example nickname" })
    <br />

    @Html.LabelFor(x => x.EmailAdress)
    @Html.TextBoxFor(x => x.EmailAdress, new { placeholder = "example@mail.com" })

    <br />
    <input type="submit" value="Send" />
}
